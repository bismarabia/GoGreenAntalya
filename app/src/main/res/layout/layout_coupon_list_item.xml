<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txv_coupon_list_title_store"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gdl_coupons_list_item"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textAlignment="viewStart"
            android:gravity="center"
            tools:ignore="RtlCompat" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@id/txv_coupon_list_point"
            app:layout_constraintEnd_toEndOf="@id/gdl_coupons_list_item"
            app:layout_constraintStart_toStartOf="@id/gdl_coupons_list_item"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:id="@+id/txv_coupon_list_point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/gdl_coupons_list_item"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textAlignment="center"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdl_coupons_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>